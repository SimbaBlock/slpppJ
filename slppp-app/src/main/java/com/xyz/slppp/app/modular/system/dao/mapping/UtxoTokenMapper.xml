<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.UtxoTokenMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.UtxoToken">
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
		<result column="n" property="n" jdbcType="INTEGER"/>
		<result column="address" property="address" jdbcType="VARCHAR"/>
		<result column="value" property="value" jdbcType="VARCHAR"/>
		<result column="script" property="script" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		txid, n, address, `value`, script
	</sql>

	<select id="findByAddress" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`utxo_token` where address = #{address} and script != ''
	</select>

	<insert id="insertUtxoToken" parameterType="com.xyz.slppp.app.modular.system.model.UtxoToken">
		insert into utxo_token
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="n != null" >
				n,
			</if>
			<if test="address != null" >
				address,
			</if>
			<if test="value != null" >
				`value`,
			</if>
			<if test="script != null" >
				script,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="n != null" >
				#{n,jdbcType=INTEGER},
			</if>
			<if test="address != null" >
				#{address,jdbcType=VARCHAR},
			</if>
			<if test="value != null" >
				#{value,jdbcType=VARCHAR},
			</if>
			<if test="script != null" >
				#{script,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

	<delete id="deleteUtxoToken">
		delete from utxo_token where txid = #{txid} and n = #{n}
	</delete>

</mapper>
