<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.VinMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.Vin">
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
		<result column="vin_txid" property="vinTxid" jdbcType="VARCHAR"/>
		<result column="vout" property="vout" jdbcType="INTEGER"/>
	</resultMap>

	<sql id="Base_Column_List">
		txid, vin_txid, vout
	</sql>

<!--	<select id="findByToken" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`slppp` where token = #{token}
	</select>-->

	<insert id="insertVin" parameterType="com.xyz.slppp.app.modular.system.model.Vin">
		insert into vin
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="vinTxid != null" >
				vin_txid,
			</if>
			<if test="vout != null" >
				vout,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="vinTxid != null" >
				#{vinTxid,jdbcType=VARCHAR},
			</if>
			<if test="vout != null" >
				#{vout,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>

</mapper>
