<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.SlpSendQuantityMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.SlpSendQuantity">
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
		<result column="address" property="address" jdbcType="VARCHAR"/>
		<result column="token_quantity" property="tokenQuantity" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		txid, address, token_quantity
	</sql>

<!--	<select id="findByToken" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`slppp` where token = #{token}
	</select>-->

	<insert id="insertSlpSendQuantity" parameterType="com.xyz.slppp.app.modular.system.model.SlpSendQuantity">
		insert into slp_send
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="tokenId != null" >
				`token_id`,
			</if>
			<if test="tokenOutputQuantity != null" >
				token_output_quantity,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="tokenId != null" >
				#{tokenId,jdbcType=VARCHAR},
			</if>
			<if test="tokenOutputQuantity != null" >
				#{tokenOutputQuantity,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
