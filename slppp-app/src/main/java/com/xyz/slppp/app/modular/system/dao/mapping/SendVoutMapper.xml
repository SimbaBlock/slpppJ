<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.SendVoutMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.SendVout">
		<result column="token_id" property="tokenId" jdbcType="VARCHAR"/>
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
		<result column="n" property="n" jdbcType="INTEGER"/>
		<result column="address" property="address" jdbcType="VARCHAR"/>
		<result column="quantity" property="quantity" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		token_id, txid, n, address, quantity
	</sql>

<!--	<select id="findByToken" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`slppp` where token = #{token}
	</select>-->

	<insert id="insertSendVout" parameterType="com.xyz.slppp.app.modular.system.model.SendVout">
		insert into send_vout
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="tokenId != null" >
				`token_id`,
			</if>
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="n != null" >
				n,
			</if>
			<if test="address != null" >
				address,
			</if>
			<if test="quantity != null" >
				quantity,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="tokenId != null" >
				#{tokenId,jdbcType=VARCHAR},
			</if>
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="n != null" >
				#{n,jdbcType=INTEGER},
			</if>
			<if test="address != null" >
				#{address,jdbcType=VARCHAR},
			</if>
			<if test="quantity != null" >
				#{quantity,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
