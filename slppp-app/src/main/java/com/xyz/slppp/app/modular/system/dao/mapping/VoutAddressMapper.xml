<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.VoutAddressMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.VoutAddress">
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
		<result column="n" property="n" jdbcType="VARCHAR"/>
		<result column="address" property="address" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		txid, n, address
	</sql>

<!--	<select id="findByToken" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`slppp` where token = #{token}
	</select>-->

	<insert id="insertVoutAddress" parameterType="com.xyz.slppp.app.modular.system.model.VoutAddress">
		insert into vout_address
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="n != null" >
				n,
			</if>
			<if test="address != null" >
				address,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="n != null" >
				#{n,jdbcType=INTEGER},
			</if>
			<if test="address != null" >
				#{address,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
