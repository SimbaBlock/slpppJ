<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.slppp.app.modular.system.dao.TransactionMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.slppp.app.modular.system.model.Transaction">
		<result column="txid" property="txid" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		txid
	</sql>

<!--	<select id="findByToken" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM
		`slppp` where token = #{token}
	</select>-->

	<insert id="insertTransaction" parameterType="com.xyz.slppp.app.modular.system.model.Transaction">
		insert into transcation
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				`txid`,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
